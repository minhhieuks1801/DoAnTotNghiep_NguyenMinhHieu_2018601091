@{ int role = Convert.ToInt32(Session["Admin_Role"]); }
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa-solid fa-list"></i></a>
        </li>

    </ul>
    <form class="form-inline ml-3">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-navbar" type="submit"><i class="fas fa-search"></i> </button>
            </div>
        </div>
    </form>
    @Html.Partial("_MessageAlert")

    @Html.Action("Dashboard", "Config")
    <ul class="navbar-nav ml-auto">
        <li class="nav-item d-none d-sm-inline-block">
            @if (role == 1)
            {
                <a class="nav-link">Xin chào: <small style="color:red; font-size:19px;">Quản trị viên</small></a>
            }
            else if (role == 2)
            {
                <a class="nav-link">Xin chào: <small style="color:red; font-size:19px;">Nhân viên bán hàng</small></a>
            }
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <img src="~/Public/images/user/@ViewBag.Admins.Image" class="img-circle elevation-1" alt="Image" width="35" style="margin-top:-5px">
            </a>

            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="min-width:200px; font-size: 15px;">
                <span class="dropdown-item dropdown-header font-weight-bold text-drank d-block">@Session["Admin_Name"]</span>
                <div class="dropdown-divider"></div>

                <div class="dropdown-divider"></div>
                <a href="~/Admin/Logout" class="dropdown-item dropdown-footer text-left">
                    <i class="fas fa-sign-out-alt mr-2"></i>Đăng xuất
                </a>
            </div>
        </li>
    </ul>
</nav>